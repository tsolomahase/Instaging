<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        Confirmation Page
      </div>
      <div class="card-body">
        <%= form_with(model: @post, local: true ,url: choose_new_or_edit)  do |f| %>
        <div class="form-group row mt-2">
          <div class="col-auto pr-0">
            <%= image_tag @current_user.icon.url(), width: '38', height: '38', class: "round-img" %>
            <%= @current_user.name %>
          </div>
  </div>
          <div class="col pl-0">
            <h5><%= f.hidden_field :content , class: "field"%></h5>
            <p><%= @post.content %></p>
            <%= f.hidden_field :user_id %>
            <%= f.hidden_field :id %>

          </div>

<br>
<br>
        <%= image_tag(@post.image.url) if @post.image && @post.image.url%>
        <%= f.hidden_field :image %>
        <%= f.hidden_field :image_cache%>
      </div>
    </div>
<br>

  </div>

  <%= f.submit "Post" ,class: "btn btn-primary" %>
  <% end %>
  <br>

  <%= form_with(model: @post, url: new_post_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :image %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit "back", name:'back' , class: "btn" %>
  <% end %>

</div>
